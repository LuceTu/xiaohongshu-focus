{
  "manifest_version": 3,
  "name": "小红书纯净版 - Xiaohongshu Focus",
  "version": "1.0.0",
  "description": "让小红书网页端回归纯净，专注搜索与内容。Block distractions on Xiaohongshu (Rednote) Web, focus on what matters.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.xiaohongshu.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.xiaohongshu.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
